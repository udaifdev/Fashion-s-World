<style>
  /* Centering the form */
  .card-body {
    width: 350px;
    padding: 20px;
    background-color: #ddcece;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin: auto; /* Center horizontally */
    margin-top: 50px; /* Adjust top margin as needed */
  }

  h2 {
    text-align: center;
    font-weight: bold;
    font-size: xx-large;
  }

  input[type="password"],
  input[type="submit"] {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #2e2e2e;
    border-radius: 5px;
    box-sizing: border-box;
  }

  input[type="submit"] {
    background-color: #408540;
    color: #fff;
    cursor: pointer;
  }

  input[type="submit"]:hover {
    background-color: #0056b3;
  }

  .error {
    color: red;
  }
</style>




<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <div class="card-body">
        <form action="/passwordUpdating" method="post" id="changePasswordForm">
          <h2>Change Password</h2>
          <input type="password" name="pass" id="currentPassword" placeholder="Current Password" required>
          <input type="password" name="Npass" id="newPassword" placeholder="New Password" required>
          <input type="password" name="Cpass" id="confirmPassword" placeholder="Confirm Password" required>
          <p id="passwordError" class="error"></p>
          <% if(pass && pass.length> 0){ %>
          <div style="color: red; font-size: 16px; font-weight: bold;">
            <%= pass %>
          </div>
          <% } %>
          <input type="submit" value="Change Password">
        </form>
      </div>
    </div>
  </div>
</div>


