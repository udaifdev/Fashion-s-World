<style>
  /* Centering the form */
  .card-body {
    width: 350px;
    padding: 20px;
    background-color: #ddcece;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin: auto; /* Center horizontally */
    margin-top: 50px; /* Adjust top margin as needed */
  }

  h2 {
    text-align: center;
    font-weight: bold;
    font-size: xx-large;
  }

  input[type="password"],
  input[type="submit"] {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #2e2e2e;
    border-radius: 5px;
    box-sizing: border-box;
  }

  input[type="submit"] {
    background-color: #408540;
    color: #fff;
    cursor: pointer;
  }

  input[type="submit"]:hover {
