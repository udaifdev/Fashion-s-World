<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Login Form Fashion-world</title>

  <style>
    @import url('https://fonts.googleapis.com/css?family=Poppins:400,500,600,700&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    html,
    body {
      display: grid;
      height: 100%;
      width: 100%;
      place-items: center;
      background: #f2f2f2;
      background-image: url('/public/login img.jpg');
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center center;
      background-attachment: fixed;
    }

    ::selection {
      background: #4158d0;
      color: #fff;
    }

    .wrapper {
      width: 380px;
      background: #fff;
      border-radius: 15px;
      box-shadow: 0px 15px 20px rgba(0, 0, 0, 0.1);
      flex-direction: column;
      justify-content: center;
      align-items: center;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .wrapper .title {
      font-size: 35px;
      font-weight: 600;
      text-align: center;
      line-height: 100px;
      color: #fff;
      user-select: none;
      border-radius: 15px 15px 0 0;
      background: linear-gradient(-135deg, #1d1d1d, #888888);
    }

    .wrapper form {
      padding: 10px 30px 50px 30px;
    }

    .wrapper .error-message {
      text-align: center;
      color: red;
      display: none; /* Initially hide the error message */
    }

    .wrapper form .field {
      height: 50px;
      width: 100%;
      margin-top: 20px;
      position: relative;
    }

    .wrapper form .field input {
      height: 100%;
      width: 100%;
      outline: none;
      font-size: 17px;
      padding-left: 20px;
      border: 1px solid lightgrey;
      border-radius: 25px;
      transition: all 0.3s ease;
    }

    .wrapper form .field input:focus,
    form .field input:valid {
      border-color: #4158d0;
    }

    .wrapper form .field label {
      position: absolute;
      top: 50%;
      left: 20px;
      color: #999999;
      font-weight: 400;
      font-size: 17px;
      pointer-events: none;
      transform: translateY(-50%);
      transition: all 0.3s ease;
    }

    form .field input:focus~label,
    form .field input:valid~label {
      top: 0%;
      font-size: 16px;
      color: #4158d0;
      background: #fff;
      transform: translateY(-50%);
    }

    form .content {
      display: flex;
      width: 100%;
      height: 50px;
      font-size: 16px;
      align-items: center;
      justify-content: space-around;
    }

    form .content .checkbox {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    form .content input {
      width: 15px;
      height: 15px;
      background: red;
    }

    form .content label {
      color: #262626;
      user-select: none;
      padding-left: 5px;
    }

    form .content .pass-link {
      color: "";
    }

    form .field input[type="submit"] {
      color: #fff;
      border: none;
      padding-left: 0;
      margin-top: -10px;
      font-size: 20px;
      font-weight: 500;
      cursor: pointer;
      background: linear-gradient(-135deg, #1d1d1d, #888888);
      transition: all 0.3s ease;
    }

    form .field input[type="submit"]:active {
      transform: scale(0.95);
    }

    form .signup-link {
      color: #262626;
      margin-top: 20px;
      text-align: center;
    }

    form .pass-link a,
    form .signup-link a {
      color: #4158d0;
      text-decoration: none;
    }

    form .pass-link a:hover,
    form .signup-link a:hover {
      text-decoration: underline;
    }

    .custom-button {
      background-color: #007bff;
      color: #e61818;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      text-decoration: none;
    }

    .goog {
      margin-top: 15px;
      margin-left: 20px;
      display: block;
    }

    .google {
      background-color: white;
      color: rgb(221, 37, 37);
      border: 2px solid rgb(221, 37, 37);
      border-radius: 8px;
      text-decoration: none;
      align-items: center;
      padding: 10px 42px;
      display: inline-block;
      border: 2px solid rgb(221, 37, 37);
      font-weight: bold;
      letter-spacing: 1px;
    }

    .google img {
      display: inline-block;
      vertical-align: middle;
      margin-right: 4px;
    }

    .google:hover {
      background-color: rgb(221, 37, 37);
      color: white;
    }

    .custom-button:hover {
      background-color: #0772e4;
    }

    .error-message {
      margin: 10px;
      text-align: center;
      color: red;
      border: 2px solid red;
      padding: 5px;
      border-radius: 5px;
      background-color: #ffe6e6;
    }

    .text-danger {
      color: red;
    }

    .bg-danger {
      border: 2px solid red;
      border-radius: 5px;
      background-color: #ffe6e6;
      padding: 5px;
      margin-top: 10px;
      text-align: center;
    }

    .text-success {
      color: green;
    }

    .bg-success {
      border: 2px solid green;
      border-radius: 5px;
      background-color: #e6ffea;
      padding: 5px;
      margin-top: 10px;
      text-align: center;
    }

    /* Media Query for smaller screens */
    @media (max-width: 768px) {
      .wrapper {
        width: 90%;
        padding: 20px;
      }

      .wrapper .title {
        font-size: 28px;
      }

      .wrapper form {
        padding: 10px 20px 40px 20px;
      }

      .wrapper form .field {
        margin-top: 15px;
      }
    }
  </style>
</head>

<body>
  <div class="wrapper">
    <div class="title">
      Login Form
    </div>

    <form action="/login" method='post'>
      <div id="emailError" class="error-message mb-0 p-0"></div>
      <div class="field">
        <input type="email" name="email" id="email" placeholder="Enter your email">
        <label>Email</label>
      </div>

      <div id="passwordError" class="error-message"></div>
      <div class="field">
        <input type="password" name="password" id="password" placeholder="Enter your password">
        <label>Password</label>
      </div>

      <% if(expressFlash.invalidpassword && expressFlash.invalidpassword.length > 0) { %>
        <div class="bg-danger">
            <%= expressFlash.invalidpassword %>
        </div>
      <% } %>
      <% if(expressFlash.invaliduser && expressFlash.invaliduser.length > 0) { %>
        <div class="bg-danger">
            <%= expressFlash.invaliduser %>
        </div>
      <% } %>
      <% if(expressFlash.usersuccess && expressFlash.usersuccess.length > 0) { %>
        <div class="bg-success">
            <%= expressFlash.usersuccess %>
        </div>
      <% } %>

      <div class="field">
        <input type="submit" value="Login">
      </div>

      <div class="goog">
        <a href="/googleSignIn" class="google">
          <img src="/public/img/google.png" width="25" height="25" alt="google img"
            style="display: inline-block; vertical-align: middle;">
          Log in with Google
        </a>
      </div>

      <div class="signup-link mt-0 pt-0">
        Don't have an account? <a href="/signup" class="signup font-weight-bold">Signup Now</a>
      </div>
    </form>
  </div>

  <script>
    document.querySelector("form").addEventListener("submit", function(event) {
      var email = document.getElementById("email").value;
      var password = document.getElementById("password").value;

      var emailError = document.getElementById("emailError");
      var passwordError = document.getElementById("passwordError");

      emailError.innerHTML = "";
      passwordError.innerHTML = "";

      if (!/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(email)) {
        emailError.innerHTML = "Invalid email";
        emailError.style.display = "block"; // Show the error message
        event.preventDefault();
      } else {
        emailError.style.display = "none"; // Hide the error message
      }

      if (password.length < 6) {
        passwordError.innerHTML = "Password at least 6 characters long";
        passwordError.style.display = "block"; // Show the error message
        event.preventDefault();
      } else {
        passwordError.style.display = "none"; // Hide the error message
      }
    });
  </script>
</body>

</html>
