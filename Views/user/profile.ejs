<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-hhJAYVyrVlbRqysQsau+3E35KWx0pWaf27oV34roF03qYpNoAUVh43RJweuW4zYuwCm/6RrXyjeY8GCt6mpLOA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
  /* Custom CSS */
  .profile-container {
    max-width: 600px;
    margin: auto;
    padding: 20px;
  }
  .btn-full-block {
    display: block;
    width: 100%;
  }
  .card-body {
    transition: box-shadow 0.3s, transform 0.3s;
  }
  .card-body:hover {
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.6);
    transform: translateY(-5px);
  }
  .user-info {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .info-item {
    margin-bottom: 10px;
  }
  .info-item strong {
    font-weight: bold;
    margin-right: 10px;
  }
  .info-item span {
    color: #555;
  }
  .user {
    font-size: x-large;
    font-family: Arial, Helvetica, sans-serif;
    color: black;
  }
  .user span {
    color: rgb(0, 0, 0);
    letter-spacing: 1px;
  }
  .btn {
    background-color: #2E8B57;
    font-weight: bold;
  }
  @media (max-width: 768px) {
    .card-body img {
      width: 100%;
      height: auto;
    }
  }
</style>

