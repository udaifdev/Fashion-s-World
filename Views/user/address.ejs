    <style>
        .address-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            padding: 20px;
            margin-bottom: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .address-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
        }

        .address-card h3 {
            margin-top: 0;
            color: #4CAF50;
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
        }

        .btn {
            padding: 8px 16px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

        /* .btn:hover {
            background-color: #45a049;
        } */

        /* .btn-edit {
            background-color: #008CBA;
            margin-right: 10px;
        } */

        .btn-delete {
            background-color: #f44336;
        }

        .btn-container {
            display: flex;
            flex-direction: column;
        }

        .btn-edit {
            width: 100%;
            padding: 8px 16px;
            background-color: #268329;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

        .btns {
            padding: 8px 16px;
            background-color: #000000;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 20px;
            letter-spacing: 1px;
            margin: 20px;
            transition: background-color 0.3s ease;
        }

        /* Responsive styling for three cards per row */
        .address-card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .address-card {
            width: 100%;
            margin-bottom: 30px;
        }

        @media (min-width: 768px) {
            .address-card {
                width: 48%;
            }
        }

        @media (min-width: 992px) {
            .address-card {
                width: 48%;
                font-size: 20px;
            }
        }
    </style>

</head>

