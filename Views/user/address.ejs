        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <h3 class="text-center m-4">Your Address</h3>
                    <div>
                        <a href="/addAddress" class="btns btn-primary btn-md mt-3 mb-3">Add Address</a>
                    </div>

                    <div class="address-card ">
                        <% if (userData && userData.address && userData.address.length > 0) { %>
                            <% userData.address.forEach((address) => { %>
                                <div class="pb-3 mt-3">
                                    <h5 class="mb-4 bg-secondary text-center text-light p-4 rounded font-weight-bold">
                                        Address: <%= address.save_as %>
                                    </h5>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h5 class="mb-3 font-weight-bold">Name : <%= address.name %> </h5>
                                            <p>Phone : <%= address.mobile %> </p>
                                            <p>Street : <%= address.street %> </p>
                                            <p>House : <%= address.housename %> </p>
                                            <p>Pincode : <%= address.pincode %> </p>
                                        </div>
                                        <div class="col-md-6 mt-4">
                                            <p>Email : <%= address.email %> </p>
                                            <p>City : <%= address.city %> </p>
                                            <p>State : <%= address.state %> </p>
                                            <p>Country : <%= address.country %> </p>
                                        </div>
                                    </div>
                                    <div class="btn-container">
                                        <a href="/editAddress/<%= address._id %>">
                                            <button class="btn btn-edit">Edit</button>
                                        </a>
                                        <button onclick="delAddress('<%= address._id %>')" class="btn btn-delete">Delete</button>
                                    </div>
                                </div>
                                <hr class="bg-dark b-3">
                            <% }) %>
                        <% } else { %>
                            <h3 class="border border-dark p-3">No address found for this user.</h3>
                        <% } %>
                    </div>
                    
                    
