<style>
/* Hide default radio button */
.radio-container input[type="radio"] {
  display: none;
}

/* Style for custom square radio button */
.radio-container {
  display: inline-block;
  position: relative;
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.radio-container input[type="radio"] + .radio {
  border: 2px solid #aaa;
  width: 100%;
  height: 100%;
  display: inline-block;
  position: absolute;
  cursor: pointer;
}

.radio-container input[type="radio"]:checked + .radio::before {
  content: '';
  width: 10px;
  height: 10px;
  display: block;
  background: #ff0000;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.form-check-input {
  width: 20px;
  height: 20px;
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  border: 2px solid rgb(56, 56, 56);
  padding: 6px;
  border-radius: 50%;
  cursor: pointer;
  margin-left: 1px;
}

a {
  text-decoration: none;
  color: white;
}

.form-check-input:checked {
  background-color: rgb(248, 25, 25);
}

.form-check-input:checked::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 10px;
  height: 20px;
  border: solid rgb(212, 14, 14);
  border-width: 0 3px 3px 0;
  transform: rotate(45deg);
}

.checkout__address-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
}

.checkout__address-option {
  border: 2px solid #e2e2e2;
  border-radius: 5px;
  padding: 10px;
  width: calc(50% - 15px); /* 2 per row with gap considered */
  box-sizing: border-box;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
  letter-spacing: 1px;
  font-family: Arial, Helvetica, sans-serif;
}

.checkout__address-option:hover {
  background-color: #f5f5f5;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
  transform: translateY(-5px);
}

.checkout__address-option.selected {
  border-color: #333;
  background-color: #f5f5f5;
}

.checkout__address-details {
  margin-bottom: 5px;
}

.checkout__address-details p {
  font-size: 16px;
  margin-bottom: 3px;
}

.site-btn {
  display: block;
  padding: 10px 20px;
  background-color: #333;
  color: #fff;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  cursor: pointer;
}

.checkout__address-option h4 {
  font-weight: bold;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
}

@media only screen and (max-width: 768px) {
  .checkout__address-option {
    width: 100%;
  }
}

