  <script>
    function handleRadio(radio) {
      // Uncheck all other radio buttons with the same name
      const radios = document.getElementsByName(radio.name);
      radios.forEach(rb => {
        if (rb !== radio) {
          rb.checked = false;
        }
      });
    }
