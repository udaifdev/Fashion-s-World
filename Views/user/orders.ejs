/* Basic styling */
/* Basic styling */
.order {
  border: 1px solid #161515;
  margin-bottom: 20px;
  padding: 10px;
  border-radius: 10px;
  background-color: #ffffff;
}
.order-item {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10px;
}
.order-item .img-container {
  flex: 0 0 250px;
  max-width: 250px;
}
.order-item img {
  width: 100%;
  height: auto;
  border-radius: 20px;
}
.order-item .details {
  flex: 1;
  padding-left: 20px;
}
.cancel-order-button, .order-details-button, .cancel-product-button, .return-order-button {
  padding: 5px 10px;
  margin-right: 10px;
  cursor: pointer;
  color: white;
  border: none;
  border-radius: 6px;
}
.cancel-order-button, .return-order-button {
  background-color: rgb(233, 49, 49);
}
.order-details-button {
  background-color: #2E8B57	;
}
.order-details-button:hover {
  background-color: #3CB371;
}
.cancel-product-button {
  background-color: rgb(190, 75, 75);
}
.card-header{
  background-color: #1b1b1b;
}
.card-header h4 {
  color: white;
}

@media (max-width: 768px) {
  .order-item {
    flex-direction: column;
    align-items: center;
    max-width: 95%;
  }
  .order-item .img-container {
    max-width: 34%;
    flex: none;
    margin-right: 25px;
  }
  .order-item .details {
    padding-left: 0;
    text-align: left; /* Align text to the left */
  }
  .bdr {
    border: 1px solid rgb(211, 211, 211);
    padding: 10px;
    margin: 20px;
    margin-top: -10px;
    margin-bottom: -10px;
    border-radius: 20px;
  }
  .bdr p{
    line-height: 60%;
  }
  .bdr .delv-add{
    line-height: 20px;
    font-size: 13px;
  }
.bdr .item-name{
  line-height: 17px;
}
.card-header{
  background-color: rgb(24, 14, 44);
}
}

</style>

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-blog set-bg mb-5" data-setbg="img/breadcrumb-bg.jpg">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h2>Your Orders History ></h2>
