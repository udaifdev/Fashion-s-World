<!-- Wishlist Section -->
<div class="container mt-4">
    <div class="row justify-content-center">
        <% if (!fav || !fav.items || fav.items.length === 0) { %>
            <div class="col-md-12 mt-4">
                <h3 class="text-center">Wishlist is empty.</h3>
            </div>
        <% } else { %>
            <table class="table">
                <thead>
                    <tr class="ls-2">
                        <th scope="col" class="pl-5">PRODUCTS</th>
                        <th scope="">Product Name</th>
                        <th scope="col">Size</th>
                        <th scope="col">Action</th>
                        <th scope="col">Remove</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% fav.items.forEach(product => { %>
                        <tr>
                            <td class="align-middle">
                                <div class="d-flex align-items-center">
                                    <img src="<%= product.productId.image[0] %>" alt="<%= product.productId.name %>" style="width: 150px; height: 180px;">
 
                                </div>
                            </td>

                            <td class="align-middle font-weight-bold"> 
                               <h5><a href="/<%= product._id %>" style="text-decoration: none; color: black; font-weight: bold;"><%= product.productId.name %></a></h5>
                            </td>

                            <td class="align-middle font-weight-bold"><%= product.size %></td>

                            <td class="align-middle">
                                <form action="/add-to-cart/<%= product.productId._id %>?size=<%= product.size %>" method="post">
                                    <button type="submit" class="btn btn-dark btn-sm">Add to Cart</button>
                                    <input type="hidden" name="size" value="<%= product.size %>">
                                    <input type="hidden" name="price" value="<%= product.price %>">
                                    <input type="hidden" name="discountPrice" value="<%= product.discountPrice %>">
                                </form>
                            </td>
                            

                            <td class="align-middle">
                                <a href="/removefromfavorites/<%= product.productId._id %>"> 
                                    <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-close"></i></button>
                                </a>
                            </td>
                         
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>
</div>


