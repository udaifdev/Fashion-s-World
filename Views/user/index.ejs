                                        <h3>
                                            <%= category.name %>
                                        </h3>
                                        <p>
                                            <%=category.description %>
                                        </p>
                                        <a href="/shop?category=<%= category._id %>" class="add-cart">+ View
                                            Collection</a>
                                        <div class="rating">
