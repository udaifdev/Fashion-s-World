    <style>
        /* Ensure background images are applied */
        .set-bg[data-setbg] {
            background-size: cover;
            background-position: center;
            /* background-image: url(attr(data-setbg)); */
        }

        .product__item {
            position: relative;
            overflow: hidden;
            border: 1px solid #e1e1e1;
            background: #fff;
            border-radius: 10px;
            margin-bottom: 30px;
            transition: transform 0.3s ease;
        }

        .product__item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            /* Add shadow on hover */
        }

        .product__item__pic {
            position: relative;
            overflow: hidden;
            border-bottom: 1px solid #e1e1e1;
            padding: 20px;
        }

        .product__hover {
            display: none;
        }

        .product__item__pic:hover .product__hover {
            display: block;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.6);
            padding: 10px;
            border-radius: 50px;
        }

        .product__hover li {
            display: inline-block;
            margin: 0 5px;
        }

        .product__hover img {
            width: 20px;
            height: 20px;
            filter: invert(1);
        }

        .product__item__text {
            padding: 15px;
            text-align: center;
        }

        .product__item__text h3 {
            font-size: 18px;
            font-weight: bold;
            /* Make the category name bold */
            color: #333;
            margin-bottom: 10px;
            letter-spacing: 1px;
        }

        .product__item__text p {
            color: #666;
            margin-bottom: 15px;
        }

        .product__item__text .add-cart {
            display: inline-block;
            padding: 5px 15px;
            background: #1a1918;
            color: #fff;
            border-radius: 5px;
            text-transform: uppercase;
            margin-bottom: 10px;
            transition: background 0.3s ease;
        }

        .product__item__text .add-cart:hover {
            background: #4e4c44;
        }

        .rating i {
            color: #e9ba21;
            margin: 0 2px;
        }

        .section-title {
            font-size: 44px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
            margin-top: 50px;
            letter-spacing: 2px;
            text-transform: uppercase;
            text-shadow: 2px 2px 4px rgba(0.8, 0.9, 0.6, 0.8);
            /* Add text shadow */
        }
    </style>





    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="section-title uppercase">Our Collections</h1>
                </div>
            </div>
            <div class="row product__filter">
                <% categories.filter(category=> category.status !== false).forEach(category => { %>
                    <% const categoryProduct=products.find(product=> product.category.toString() ===
                        category._id.toString()); %>
                        <% if (categoryProduct && categoryProduct.image.length> 0) { %>
                            <div class="col-lg-3 col-md-6 col-sm-6 mt-4" data-aos="fade" data-aos-delay="">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg">
                                        <a href="/shop?category=<%= category._id %>">
                                            <img src="<%= categoryProduct.image[0] %>" alt="-- -- images"
                                                class="img-fluid">
                                            <span class="label">New</span>
                                        </a>
                                    </div>
                                    <div class="product__item__text">
                                        <h3>
                                            <%= category.name %>
                                        </h3>
                                        <p>
                                            <%= category.description %>
                                        </p>
                                        <a href="/shop?category=<%= category._id %>" class="add-cart">+ View
                                            Collection</a>
                                        <div class="rating">
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                                <% }); %>
            </div>
        </div>
    </section>
