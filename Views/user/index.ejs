            <div class="row product__filter">
                <% categories.filter(category=> category.status !== false).forEach(category => { %>
                    <% const categoryProduct=products.find(product=> product.category.toString() ===
                        category._id.toString()); %>
                        <% if (categoryProduct && categoryProduct.image.length> 0) { %>
