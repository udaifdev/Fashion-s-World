    <link rel="stylesheet" href="css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="css/style.css" type="text/css">

    <style>
        /* Adjust form container styles */
        /* .site-block-top-search {
} */

        /* Style for search input container */
        .search-container {
            position: relative;
            display: flex;
            align-items: center;
        }

        /* Style for the search input */
        .form-control.border-1 {
            padding-right: 30px;
            /* Ensure space for the search icon */
            height: 40px;
            /* Adjust height as needed */
            border: 1px solid #ccc;
            /* Example border style */
            border-radius: 4px;
            /* Example border radius */
            font-size: 14px;
            /* Example font size */
        }

        /* Style for the search button */
        .search-button {
            position: absolute;
            right: 10px;
            /* Adjust to align the search icon */
            background: none;
            border: none;
            cursor: pointer;
        }

        /* Style for the search icon */
        .search-button img {
            width: 20px;
            /* Adjust size of the search icon */
            height: 20px;
            /* Adjust size of the search icon */
        }

        /* Placeholder text style (optional) */
        .form-control.border-1::placeholder {
            color: #999;
            /* Example placeholder color */
        }
    </style>

</head>

<body>
    <!-- Page Preloder -->
    <!-- <div id="preloder">
        <div class="loader"></div>
    </div> -->

    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="offcanvas__option">
            <div class="offcanvas__links">
                <!-- <a href="/signup">Sign in</a> -->
                <a href="/login">Login</a>
            </div>
            <div class="offcanvas__top__hover">
                <span><a href="/logout"> logout </a></span>
            </div>
        </div>

        <div class="offcanvas__nav__option">


            <a href="#" class="search-switch"><img src="img/icon/search.png" alt=""></a>


            <a href="/wishlisht"><img src="img/icon/heart.png" alt=""></a>
            <a href="/Cart">
                <img src="img/icon/cart.png" alt="Cart">
                <% if (itemCount && itemCount> 0 ) { %>
                    <span>
                        <%= itemCount %>
                    </span>
                    <% } else { %>
                        <span>0</span>
                        <% } %>
            </a>
            <% if (Cart_total && Cart_total> 0 ) { %>
                <div class="price">₹ <%= Cart_total %>
                </div>
                <% } else { %>
                    <div class="price">₹0</div>
                    <% } %>
        </div>
        <div id="mobile-menu-wrap"></div>
        <div class="offcanvas__text">
            <p>Free shipping, 30-day return or refund guarantee.</p>
        </div>
    </div>
    <!-- Offcanvas Menu End -->

    <!-- Header Section Begin -->
    <header class="header">

        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="header__logo">
                        <img src="img/logo.png" alt="image logo">
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li class="active"><a href="/">Home</a></li>
                            <li><a href="/shop">Shop</a></li>
                            <li><a href="#">Pages</a>
                                <ul class="dropdown">
                                    <!-- <li><a href="/about">About Us</a></li> -->
                                    <li><a href="/Cart">Shopping Cart</a></li>
                                    <!-- <li><a href="/profile">Profile</a></li>
                                    <li><a href="/contact">Contacts</a></li> -->
                                </ul>
                            </li>
                            <li><a href="/profile">Profile</a></li>
                            <li><a href="/contact">Contacts</a></li>
                        </ul>
                    </nav>
                </div>

                <div class="col-lg-3 col-md-3">
                    <div class="header__nav__option">



                        <form action="/shop" method="get" class="site-block-top-search" id="searchForm">
                            <!-- Hidden input for the search query -->
                            <input type="hidden" name="search" id="searchInput">
                        </form>
                        
                        <a href="#" class="search-switch">
                            <img src="img/icon/search.png" alt="Search" onclick="showSearchModel(); return false;">
                        </a>
                        
                        <div class="search-model">
                            <!-- Your search model content here, can include search options, filters, etc. -->
                            <button class="search-close-switch">Close</button>
                            <div class="search-option" data-search-query="your_search_query_here">Option 1</div>
                            <div class="search-option" data-search-query="another_query_here">Option 2</div>
                        </div>
                        
                        
                        





                        <a href="/wishlisht"><img src="img/icon/heart.png" alt="Favorites"></a>
                        <a href="/Cart">
                            <img src="img/icon/cart.png" alt="Cart">
                            <% if (itemCount && itemCount> 0 ) { %>
                                <span>
                                    <%= itemCount %>
                                </span>
                                <% } else { %>
                                    <span>0</span>
                                    <% } %>
                        </a>
                        <% if (Cart_total && Cart_total> 0 ) { %>
                            <div class="price">₹ <%= Cart_total %>
                            </div>
                            <% } else { %>
                                <div class="price">₹0</div>
                                <% } %>
                    </div>
                </div>

            </div>
        </div>
        <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>


        <script>
            function showSearchModel() {
                $('.search-model').fadeIn(400);
            }
            
            $('.search-close-switch').on('click', function () {
                $('.search-model').fadeOut(400, function () {
                    $('#searchInput').val(''); // Clear search query if needed
                });
            });
            
            $('.search-model').on('click', '.search-option', function () {
                var searchQuery = $(this).data('search-query'); // Get search query from option clicked
                $('#searchInput').val(searchQuery); // Set the search query to the hidden input field
                $('#searchForm').submit(); // Submit the form
            });
            </script>
            
            

    </header>
    <!-- Header Section End -->