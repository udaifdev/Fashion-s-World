<script>
    function validateForm() {
      var productName = document.getElementById('product_name').value;
      var discount = document.getElementById('discount').value;
      var nameError = document.getElementById('nameError'); // Corrected variable name
    
      // Reset error messages
      nameError.innerHTML = '';
      disError.innerHTML = ''; // Assuming disError is defined elsewhere in your code
      discountError.innerHTML = '';
    
      // Validate product name
      if (productName.trim() === '') {
        nameError.innerHTML = 'Name is required.';
        return false;
      }
    
      // Validate discount
      if (discount.trim() === '') {
        discountError.innerHTML = 'Discount is required.';
        return false;
      } else if (isNaN(discount)) {
        discountError.innerHTML = 'Discount must be a number.';
        return false;
      } else if (discount < 0 || discount > 100) {
        discountError.innerHTML = 'Discount must be between 0 and 100.';
        return false;
      }
    
      return true;
    }
    </script>
    
